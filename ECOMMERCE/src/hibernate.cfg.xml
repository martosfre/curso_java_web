<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">toor</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ecommerce?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_catalog">ecommerce</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.matoosfe.ecommerce.modelo.Proveedor"/>
        <mapping class="com.matoosfe.ecommerce.modelo.Usuario"/>
         <mapping class="com.matoosfe.ecommerce.modelo.TipoCliente"/>
        <mapping class="com.matoosfe.ecommerce.modelo.Cliente"/>
        <mapping class="com.matoosfe.ecommerce.modelo.Producto"/>
        <mapping class="com.matoosfe.ecommerce.modelo.Factura"/>
        <mapping class="com.matoosfe.ecommerce.modelo.TipoProducto"/>
        <mapping class="com.matoosfe.ecommerce.modelo.Rol"/>
        <mapping class="com.matoosfe.ecommerce.modelo.ProductoHasProveedor"/>
        <mapping class="com.matoosfe.ecommerce.modelo.DetalleFactura"/>
    </session-factory>
</hibernate-configuration>
